.analogy-text p { font-size: 1rem; color: var(--medium-text); line-height: 1.7; margin: 0; }
.process-grid { display: grid; grid-template-columns: 1fr; gap: 1.5rem; margin-top: 2.5rem; }
.process-step { background: var(--section-bg); border: 1px solid var(--border-color); border-radius: 12px; padding: 2rem; box-shadow: var(--shadow-sm); }
.process-step-header { display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem; }
.step-circle { flex-shrink: 0; width: 45px; height: 45px; border-radius: 50%; border: 2px solid var(--primary-color); color: var(--primary-color); display: flex; align-items: center; justify-content: center; font-size: 1.5rem; font-weight: 600; }
.process-step h4 { font-size: 1.3rem; margin: 0; display: flex; align-items: center; gap: 0.75rem; }
.process-step h4 .fa-icon { color: var(--primary-color); }
.process-step p { font-size: 0.95rem; margin: 0; line-height: 1.6; padding-left: 65px; }
.card-example { background: var(--section-bg); padding: 2.5rem; border-radius: 16px; margin-top: 4rem; box-shadow: var(--shadow-md); border: 1px solid var(--border-color); text-align: center; }
.card-example h4 { font-size: 1.4rem; margin-bottom: 1.5rem; }
.card-example .flow { display: flex; align-items: center; justify-content: center; gap: 1rem; flex-wrap: wrap; margin-bottom: 2rem; }
.flow span { background: var(--light-bg); padding: 1rem 1.5rem; border-radius: 8px; border: 1px solid var(--border-color); text-align: center; line-height: 1.5; }
.flow i { font-size: 1.5rem; color: var(--medium-text); }
.result-box { background-color: #f8f9fa; border: 1px solid var(--border-color); border-radius: 8px; padding: 1rem; margin-bottom: 1rem; }
.result-box p { margin: 0; }
.profit-gain { color: var(--success-color); font-weight: 700; font-size: 1.2rem; }
.result-text { font-style: italic; font-size: 1rem; margin-bottom: 0 !important; }
.geo-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem; }
.geo-item { background: var(--section-bg); border: 1px solid var(--border-color); border-radius: 12px; padding: 2rem; text-align: center; box-shadow: var(--shadow-sm); }
.geo-item i { font-size: 2.5rem; color: var(--primary-color); margin-bottom: 1rem; }
.geo-item h4 { font-size: 1.2rem; margin-bottom: 0.5rem; }
.final-benefits-list { list-style: none; padding: 0; max-width: 700px; margin: 2rem auto 0 auto; }
.final-benefits-list li { display: flex; align-items: flex-start; background-color: var(--section-bg); margin-bottom: 1rem; padding: 1.2rem 1.5rem; border-radius: 8px; border: 1px solid var(--border-color); font-size: 1.05rem; box-shadow: var(--shadow-sm); color: var(--dark-text); }
.final-benefits-list .checkmark { color: var(--success-color); margin-right: 1rem; margin-top: 0.2rem; }
.final-benefits-list li span { line-height: 1.6; }
.final-benefits-list li strong { color: var(--dark-text); }
.not-for-grid { display: grid; grid-template-columns: 1fr; gap: 1.5rem; margin-top: 2.5rem; }
.not-for-card { background-color: var(--light-bg); border: 1px solid var(--border-color); border-left: 5px solid var(--medium-text); padding: 1.5rem 2rem; border-radius: 8px; box-shadow: var(--shadow-sm); }
.not-for-card h4 { font-size: 1.2rem; color: var(--dark-text); margin-bottom: 0.75rem; display: flex; align-items: center; gap: 0.75rem; }
.not-for-card p { margin-bottom: 0; color: var(--medium-text); font-size: 0.95rem; line-height: 1.6; }
/* ===== FORM (STILI MODIFICATI PER TRANSIZIONE) ===== */
.section-cta { background-color: var(--primary-color); }
.section-cta .container { padding-top: 5rem; padding-bottom: 5rem; }
.section-cta .section-title { color: var(--light-text); }
.section-cta .section-intro { color: var(--light-text); font-size: 1rem; margin-top: -1rem; margin-bottom: 2.5rem; }
.form-wrapper { max-width: 600px; margin: 0 auto; position: relative; min-height: 550px; }
.contact-form, #success-message { position: absolute; width: 100%; left: 0; top: 0; background: var(--section-bg); padding: 2.5rem; border-radius: 16px; box-shadow: var(--shadow-md); text-align: left; transition: opacity 0.5s ease-out, transform 0.5s ease-out; }
#success-message { text-align: center; }
#success-message i { font-size: 3rem; color: var(--success-color); margin-bottom: 1rem; }
#success-message h3 { font-size: 1.5rem; color: var(--dark-text); }
#success-message p { color: var(--medium-text); margin-top: 1rem; margin-bottom: 0; }
.hidden-form { opacity: 0; transform: translateY(20px); pointer-events: none; }
.form-group { margin-bottom: 1.5rem; }
.form-group label { display: block; margin-bottom: 0.5rem; font-weight: 600; }
.form-group input, .form-group textarea { width: 100%; padding: 0.8rem 1rem; border-radius: 8px; border: 1px solid var(--border-color); background: var(--light-bg); color: var(--dark-text); font-size: 1rem; font-family: var(--font-family); transition: all 0.2s ease; }
.form-group input:focus, .form-group textarea:focus { outline: none; border-color: var(--primary-color); box-shadow: 0 0 0 3px rgba(42, 111, 219, 0.2); }
.form-group-checkbox { display: flex; align-items: flex-start; gap: 0.75rem; margin-bottom: 1.5rem; }
.form-group-checkbox input[type="checkbox"] { margin-top: 5px; flex-shrink: 0; }
.form-group-checkbox label { font-weight: 400; font-size: 0.9rem; color: var(--medium-text); margin-bottom: 0; }
.form-group-checkbox label .privacy-link { color: var(--primary-color); text-decoration: underline; cursor: pointer; }
/* ===== FAQ ===== */
.faq-container { max-width: 800px; margin: 2rem auto 0 auto; }
.faq-item { background-color: var(--section-bg); border: 1px solid var(--border-color); border-radius: 8px; margin-bottom: 1rem; box-shadow: var(--shadow-sm); }
