.hero-benefits-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem; margin-bottom: 3.5rem; }
.benefit-box { background: rgba(255, 255, 255, 0.15); padding: 2rem 1.5rem; border-radius: 16px; backdrop-filter: blur(5px); border: 1px solid rgba(255, 255, 255, 0.25); transition: background 0.3s ease; }
.benefit-box:hover { background: rgba(255, 255, 255, 0.25); }
.benefit-box i { font-size: 2.2rem; margin-bottom: 1rem; }
