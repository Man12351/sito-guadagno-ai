/* ===== BOTTONI ===== */
.cta-button { display: inline-block; padding: 1rem 2.5rem; border-radius: 50px; text-decoration: none; font-weight: 600; font-size: 1rem; transition: all 0.3s ease; border: none; cursor: pointer; text-align: center; }
.cta-button:disabled { background: linear-gradient(90deg, #9dbef2, #88d1c9); cursor: not-allowed; }
.cta-button.primary { background: linear-gradient(90deg, var(--primary-color), var(--secondary-color)); color: var(--light-text); box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); }
.cta-button.primary:hover:not(:disabled) { transform: translateY(-3px); box-shadow: 0 7px 20px rgba(0, 0, 0, 0.15); }
.cta-button.light { background-color: var(--light-text); color: var(--primary-color); }
.cta-button.light:hover { transform: translateY(-3px); box-shadow: 0 7px 20px rgba(0, 0, 0, 0.1); }
.cta-button.large { width: 100%; padding: 1.2rem; font-size: 1.1rem; }
/* ===== SEZIONI E CARD ===== */
.section-highlight { background-color: var(--section-bg); border-top: 1px solid var(--border-color); border-bottom: 1px solid var(--border-color); }
.quote-card { position: relative; background-color: #f0f4ff; border-left: 5px solid var(--primary-color); padding: 2rem 2.5rem 2rem 3.5rem; border-radius: 8px; margin: 2.5rem auto; max-width: 700px; }
