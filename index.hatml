<script>
document.addEventListener('DOMContentLoaded', function() {
    // --- LOGICA MENU MOBILE ---
    const nav = document.getElementById('main-nav');
    const menuToggle = document.querySelector('.menu-toggle');
    const navLinks = document.querySelectorAll('.nav-links a');
    if (menuToggle && nav) {
        const iBars = menuToggle.querySelector('.fa-bars');
        const iTimes = menuToggle.querySelector('.fa-times');
        if(iTimes) iTimes.style.display = 'none';

        menuToggle.addEventListener('click', () => {
            const isOpen = nav.classList.toggle('menu-open');
            document.body.classList.toggle('menu-active');
            if(iBars && iTimes){
                iBars.style.display = isOpen ? 'none' : 'block';
                iTimes.style.display = isOpen ? 'block' : 'none';
            }
        });
    }
    navLinks.forEach(link => {
        link.addEventListener('click', () => {
            if (nav.classList.contains('menu-open')) {
                nav.classList.remove('menu-open');
                document.body.classList.remove('menu-active');
                const iBars = menuToggle.querySelector('.fa-bars');
                const iTimes = menuToggle.querySelector('.fa-times');
                if(iBars && iTimes){
                    iBars.style.display = 'block';
                    iTimes.style.display = 'none';
                }
            }
        });
    });

    // --- LOGICA FAQ ACCORDION ---
    const faqItems = document.querySelectorAll('.faq-item');
    faqItems.forEach(item => {
        const question = item.querySelector('.faq-question');
        if (question) {
            const toggleIcon = item.querySelector('.faq-toggle');
            question.addEventListener('click', () => {
                const wasActive = item.classList.contains('active');
                
                // Chiudi tutti gli altri
                faqItems.forEach(i => {
                    if (i !== item) {
                        i.classList.remove('active');
                        const otherIcon = i.querySelector('.faq-toggle');
                        if (otherIcon) {
                            otherIcon.classList.remove('fa-minus');
                            otherIcon.classList.add('fa-plus');
                        }
                    }
                });

                // Apri/chiudi l'elemento cliccato
                item.classList.toggle('active', !wasActive);
                if (toggleIcon) {
                    toggleIcon.classList.toggle('fa-plus', wasActive);
                    toggleIcon.classList.toggle('fa-minus', !wasActive);
                }
            });
        }
    });

    // --- NAVBAR SCROLL ---
    window.addEventListener('scroll', function() {
        if (window.scrollY > 50) {
            nav.classList.add('nav-scrolled');
        } else {
            nav.classList.remove('nav-scrolled');
        }
    });

    // --- LOGICA MODAL/POPUP PRIVACY ---
    const modalOverlay = document.getElementById('privacy-modal');
    const openModalLink = document.querySelector('.privacy-link');
    const closeModalBtn = document.querySelector('.modal-close-btn');

    if(modalOverlay && openModalLink && closeModalBtn) {
        const openModal = (e) => {
            e.preventDefault();
            modalOverlay.classList.add('show');
            document.body.classList.add('modal-open');
        };
        const closeModal = () => {
            modalOverlay.classList.remove('show');
            document.body.classList.remove('modal-open');
        };

        openModalLink.addEventListener('click', openModal);
        closeModalBtn.addEventListener('click', closeModal);
        modalOverlay.addEventListener('click', (e) => {
            if (e.target === modalOverlay) closeModal();
        });
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape' && modalOverlay.classList.contains('show')) closeModal();
        });
    }

    // --- SCRIPT PER GESTIRE L'INVIO DEL FORM TRAMITE LA TUA API PERSONALE ---
    const contactForm = document.getElementById('contact-form');
    const successMessageContainer = document.getElementById('success-message');
    
    if (contactForm && successMessageContainer) {
        contactForm.addEventListener('submit', function(event) {
            event.preventDefault();

            const formData = new FormData(contactForm);
            const data = Object.fromEntries(formData.entries());
            const submitButton = contactForm.querySelector('button[type="submit"]');
            const originalButtonText = submitButton.textContent;
            
            submitButton.disabled = true;
            submitButton.textContent = 'Invio in corso...';

            fetch('/api/send-email', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data)
            })
            .then(response => {
                if (!response.ok) throw new Error('La risposta del server non √® OK');
                return response.json();
            })
            .then(responseData => {
                if (responseData.id) { // Resend risponde con un 'id' se l'invio ha successo
                    contactForm.classList.add('hidden-form');
                    setTimeout(() => {
                        successMessageContainer.classList.remove('hidden-form');
                    }, 50); // Piccolo ritardo per far completare la transizione del form
                } else {
                    throw new Error('Errore nell\'invio del messaggio.');
                }
            })
            .catch(error => {
                alert('Si √® verificato un errore. Riprova pi√π tardi.');
                submitButton.disabled = false;
                submitButton.textContent = originalButtonText;
                console.error('Fetch error:', error);
            });
        });
    }
});
</script>
