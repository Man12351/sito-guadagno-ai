.quote-card h3 { font-size: 1.2rem; font-weight: 500; font-style: italic; color: var(--dark-text); }
.card-feature-small { background-color: #eef5ff; color: var(--dark-text); border-left: 4px solid var(--primary-color); padding: 1.5rem; border-radius: 8px; }
