.negative-list i { color: var(--danger-color); font-size: 1.2rem; }
.no-text { border-top: 1px solid var(--border-color); padding-top: 1.5rem; text-align: center; color: var(--dark-text); }
.card-analogy { background: var(--section-bg); padding: 2.5rem; border-radius: 16px; margin: 2.5rem 0; box-shadow: var(--shadow-md); border: 1px solid var(--border-color); text-align: center; }
