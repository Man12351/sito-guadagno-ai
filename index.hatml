.modal-container { background-color: var(--section-bg); padding: 2rem; border-radius: 8px; box-shadow: var(--shadow-md); width: 90%; max-width: 800px; max-height: 85vh; display: flex; flex-direction: column; transform: scale(0.95); transition: transform 0.3s ease; }
.modal-overlay.show .modal-container { transform: scale(1); }
