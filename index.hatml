.faq-toggle { font-size: 1.2rem; color: var(--primary-color); transition: transform 0.3s ease; }
.faq-item.active .faq-toggle { transform: rotate(45deg); }

/* ===== FOOTER (MODIFICATO) ===== */
footer { 
    background-color: var(--dark-text); 
